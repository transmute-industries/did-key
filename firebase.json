{
  "functions": {
    "source": "./packages/firebase-resolver"
  },
  "hosting": {
    "public": "./packages/pwa/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      },
      {
        "source": "/api/docs",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      }
    ],
    "rewrites": [
      {
        "source": "/.well-known/**",
        "function": "main"
      },
      {
        "source": "/api/**",
        "function": "main"
      },
      {
        "source": "/api",
        "function": "main"
      },
      {
        "source": "**",
        "destination": "/api/docs"
      }
    ]
  }
}
